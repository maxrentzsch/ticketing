<body>
    <nav>
        <h4> Node mySQL</h4>
        <ul>
            <li><a href="/index.hbs">Home</a></li>
            <li><a href="/login.hbs">Login</a></li>
            <li><a href="/register.hbs">Register</a></li>

        </ul>

    </nav>

    <div class="container mt-4">
        <div class="card">
        <div class="card-header">
            Login Form
        </div>
         <div class="card-body">
            <form action="/auth.js/login" method="POST">
                
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>

                <div class="mb-3">
                    <label for="pass" class="form-label">Passsword</label>
                    <input type="password" class="form-control" id="pass" name="pass">
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
                </form>
          
         </div>

         {{#if message }}
            <h4 class="alert alert-danger mt4">{{ message }}</h4>
            {{/if }}

</div>


    </div>

